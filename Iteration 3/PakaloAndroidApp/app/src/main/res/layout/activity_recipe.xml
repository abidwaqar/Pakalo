<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/modal_box"
    android:elevation="1pt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recipe_img_ar"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:alpha="0.7"
                android:src="@drawable/food" />

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                android:layout_marginBottom="5pt"
                android:layout_gravity="center"
                android:background="@drawable/round_button"
                android:elevation="2pt"
                android:fontFamily="@font/roboto_bold"
                android:text="Start Recipe"
                android:textColor="@android:color/white"
                android:onClick="openChatbotWithRecipe"/>

            <TextView
                android:id="@+id/recipe_name_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:textSize="30sp"
                android:layout_marginRight="24dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Ingredients"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ingredients_list_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textColor="@android:color/white"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:layout_marginRight="24dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/white"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:text="Instructions"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/instructions_list_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textColor="@android:color/white"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textSize="16sp"
                android:layout_marginRight="24dp"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>